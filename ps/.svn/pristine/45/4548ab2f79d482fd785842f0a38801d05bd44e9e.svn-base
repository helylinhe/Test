					url : path + '/employeeAction!getDeptHigtChart.action',
					dataType : "json",
					data : {
						
						'map.flupTableNameId':rowData.flupTableNameId,
						'map.deptCode': rowData.deptCode,
						'map.flupDateStart':$("#flupDateStart").datebox("getValue"),
						'map.flupDateEnd':$("#flupDateEnd").datebox("getValue"),
						'map.flupType':$("#flupType").combobox("getValue")
					},
					success : function(data) {
						
						createHighcharts(data[0].rows,row.deptName+'随访率统计' , row.deptName);
					}
				});
			}
		}
 });  
});

function search(){
	$("#keshisuifangratetable").datagrid("unselectAll");
	var param={'map.flupTableNameId':$("#flupName").combogrid('getValue'),'map.deptCode': $("#deptCode").combogrid("getValue"),
			'map.flupDateStart':$("#flupDateStart").datebox("getValue"),'map.flupDateEnd':$("#flupDateEnd").datebox("getValue"),
			'flupType':$("#flupType").combobox("getValue")};
	
	 loadData(path+'/employeeAction!loadDataGrid.action','keshisuifangratetable',param);
}

function formatFloat(src, pos)
{
    return Math.round(src*Math.pow(10, pos))/Math.pow(10, pos);
}


function createHighcharts(data, title, name) {
	console.info(data);
	var categories = new Array();
	var seriesDate = new Array();
	var text = '';
	var titleText = '';
	if (data.length == 0) {
		categories.push('');
		seriesDate.push('');
		text = '无图像';
		titleText = '';
	} else {
		text = '';
		titleText = data[0].resultUnit;
		for ( var i = 0; i < data.length; i++) {
			if($("#flupType").combobox('getValue')=='0'){
				categories.push(data[i].flupDate);
				seriesDate.push(parseFloat(data[i].flupRate));
			}else{
				categories.push(data[i].flupDate);
				seriesDate.push(parseFloat(data[i].flupRate));
			}
		}
	}

	$('#container').highcharts({
		chart : {
			type : 'spline'
		},
		title : {
			text : title
		},
		subtitle : {
			text : text
		},
		xAxis : {
			categories : categories,
			labels : {
				step : 1
			},
			tickInterval : 1
		},
		yAxis : {
			title : {
				text : '随访率(%)'
			},
			labels : {
				formatter : function() {
					return this.value;
				}
			}
		},
		tooltip : {
			crosshairs : true,
			shared : true
		},
		plotOptions : {
			spline : {
				marker : {
					radius : 4,
					lineColor : '#666666',
					lineWidth : 1
				}
			}
		},
		series : [ {
			name : name,
			data : seriesDate
		} ]
	});

}
