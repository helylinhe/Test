				}
			}, {
				field : 'flupName',
				title : '随访表名',
			    width : 200,
				align : 'center',
				formatter : function(value,row,index) {
					return value==''?'全部':value;
				}
			}, {
			field : 'totalCountNum',
			title : '随访总人数',
		    width : 100,
			align : 'center',
			formatter : function(val, rec) {
				return val;
			}
		}, {
			field : 'complateCountUnum',
			title : '已随访人数',
			width : 100,
			align : 'center',
			formatter : function(val, rec) {
				return val;
			}
		},{
			field : 'count',
			title : '随访率',
			width : 100,
			align : 'center',
